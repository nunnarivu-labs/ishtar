rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Default rule: deny all read/write access.
    match /{allPaths=**} {
      allow read, write: if false;
    }
    match /userFiles/{userId}/{conversationId}/{fileName} {
      allow create, read, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if (request.resource.contentType.matches('application/pdf') ||
                      request.resource.contentType.matches('image/.*')) &&
                      request.resource.size < 25 * 1024 * 1024; // 25 MB limit
    }
  }
}
